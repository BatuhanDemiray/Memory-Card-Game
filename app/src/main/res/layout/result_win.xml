<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#10ac84"
    android:gravity="center"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/maian"
        android:text="Tebrikler!"
        android:textColor="@color/colorWhite"
        android:textSize="50dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/txtScoreWin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/maian"
        android:textColor="@color/colorWhite"
        android:textSize="20dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/txtFailWin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/maian"
        android:textColor="@color/colorWhite"
        android:textSize="20dp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btnMenuWin"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:background="@drawable/btndesign"
        android:fontFamily="@font/maian"
        android:text="Menüye Dön"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btnExitWin"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="@drawable/btndesign"
        android:fontFamily="@font/maian"
        android:text="Çıkış Yap"
        android:textStyle="bold" />
</LinearLayout>